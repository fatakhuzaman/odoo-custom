<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_my_model_complex_tree" model="ir.ui.view">
        <field name="name">my.model.complex.tree</field>
        <field name="model">my.model.complex</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="total_submodels" />
                <field name="fix_total_submodels" />
                <field name="total_value" />
            </tree>
        </field>
    </record>

    <record id="view_my_model_complex_form" model="ir.ui.view">
        <field name="name">my.model.complex.form</field>
        <field name="model">my.model.complex</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                        <field name="total_value" />
                        <field name="total_submodels" />
                        <field name="fix_total_submodels" />
                    </group>
                    <header>
                        <button name="button_count_submodels" string="Fix Total Submodels" type="object" class="btn-primary"/>
                    </header>
                    <notebook>
                        <page string="Submodels">
                            <field name="submodel_ids">
                                <tree editable="bottom">
                                    <field name="name" />
                                    <field name="value" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_my_model_complex_kanban" model="ir.ui.view">
        <field name="name">my.model.complex.kanban</field>
        <field name="model">my.model.complex</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_example">
                <field name="name" />
                <field name="fix_total_submodels" />
                <field name="total_value" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_primary_left">
                                <strong><field name="name" /></strong>
                            </div>
                            <div class="o_kanban_details">
                                <div>
                                    <span class="text-muted">Fix Total Submodels: </span>
                                    <span><field name="fix_total_submodels" /></span>
                                </div>
                                <div>
                                    <span class="text-muted">Total Value: </span>
                                    <span><field name="total_value" /></span>
                                </div>
                            </div>
                            <div class="o_kanban_footer">
                                <span t-if="record.fix_total_submodels.raw_value &gt; 2" class="badge badge-success">
                                    High
                                </span>
                                <span t-if="record.fix_total_submodels.raw_value &lt; 2" class="badge badge-danger">
                                    Low
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_my_model_complex" model="ir.actions.act_window">
        <field name="name">My Model Complex</field>
        <field name="res_model">my.model.complex</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <menuitem id="menu_my_complex_module" name="My Complex Module" />
    <menuitem id="menu_my_model_complex" name="My Model" parent="menu_my_complex_module" action="action_my_model_complex" />

</odoo>
